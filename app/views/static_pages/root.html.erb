<div id="search-title">
  <h1>Search Gems</h1>
</div>

<%= form_tag "/search" do %>
<div class="input-group">
  <input type="text" class="form-control" placeholder="Search" name="search-term" id="search-term">
  <div class="input-group-btn">
    <button class="btn btn-default" type="submit">
      <i class="glyphicon glyphicon-search"></i>
    </button>
  </div>
</div>
<% end %>

<div class="gem-data col-md-8">
  <% if !@gem.nil? %>
  <ul>
    <li><%= link_to @gem[:name], @gem[:project_uri], target: :_blank %>
      <div class="fave-icon" onclick='addFave("<%= @gem[:name] %>", "<%= @gem[:project_uri] %>")'>
        <span>&#x2605</span>
      </div>
    </li>

    <li>
      <h2>INFORMATION</h2>
    </li>
    <li><%= @gem[:info] %></li>
    <li>
      <h2>DEPENDENCIES</h2>
    </li>
    <% @gem[:dependencies].each do |d| %>
    <li><%= link_to d[:name], @gemsurl + d[:name], target: :_blank %>
      <div class="fave-icon" onclick='addFave("<%= d[:name] %>", "<%= @gemsurl + d[:name] %>")'>
        <span>&#x2605</span>
      </div>
    </li>
    <% end %>

  </ul>
  <% end %>

</div>
